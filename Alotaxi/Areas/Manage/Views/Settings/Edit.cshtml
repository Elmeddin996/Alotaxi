@model Settings
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>Redaktə Et</h2>
        <form asp-action="edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Address">Ünvan</label>
                <input class="form-control" placeholder="Ünvan Əlavə Edin" asp-for="Address">
            </div>
            <div class="form-group">
                <label asp-for="Phone">Əlaqə Nömrəsi</label>
                <input class="form-control" placeholder="Əlaqə Nömrəsi Əlavə Edin" asp-for="Phone">
            </div>
           
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input class="form-control" placeholder="Email Əlavə Edin" asp-for="Email">
            </div>
             <div class="form-group">
                <label asp-for="AppStore">AppStore Linki</label>
                <input class="form-control" placeholder="AppStore Linki Əlavə Edin" asp-for="AppStore">
            </div>
            <div class="form-group">
                <label asp-for="PlayStore">PlayStore Linki</label>
                <input class="form-control" placeholder="PlayStore Linki Əlavə Edin" asp-for="PlayStore">
            </div>
            <div class="form-group">
                <label asp-for="Instagram">Instagram</label>
                <input class="form-control" placeholder="Instagram Linki Əlavə Edin" asp-for="Instagram">
            </div>
            <div class="form-group">
                <label asp-for="Facebook">Facebook</label>
                <input class="form-control" placeholder="Facebook Linki Əlavə Edin" asp-for="Facebook">
            </div>
            <div class="form-group">
                <label asp-for="BusinessTitle">Korporativ üçün başlıq</label>
                <input class="form-control" placeholder="Başlıq Əlavə Edin" asp-for="BusinessTitle">
            </div>
            <div class="form-group">
                <label asp-for="BusinessDescription">Korporativ üçün Açıqlama</label>
                <input class="form-control" placeholder="Açıqlama Əlavə Edin" asp-for="BusinessDescription">
            </div>
          
           
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>

