@model Categorie
@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>Yeni Xidmət Əlavə Et</h2>
        <form asp-action="create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="CategoryName">Xidmət Adı</label>
                <input class="form-control" placeholder="Xidmət Adı Əlavə Edin" asp-for="CategoryName">
            </div>
            <div class="form-group">
                <label asp-for="Description">Açıqlama</label>
                <input class="form-control" placeholder="Açıqlama Əlavə Edin" asp-for="Description">
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Image</label>
                <input class="form-control" asp-for="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
