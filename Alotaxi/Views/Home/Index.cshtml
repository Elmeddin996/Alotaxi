<section class="booking-section">
    <div class="bg bg-image" style="background-image: url(images/background/1.jpg);"></div>
    <div class="bg-overlay"></div>
    <div class="auto-container">

        <div class="booking-form">
            <div class="sec-title">
                <h2 class="letters-slide-up text-split">Book Your Taxi Ride!</h2>
                <div class="text">To get the ride of your taxi please select from the following:</div>
            </div>
            <form method="get" action="#">
                <div class="row">
                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        <select class="custom-select">
                            <option>Choose Taxi Type</option>
                            <option>Hybrid Tax</option>
                            <option>Town Taxi</option>
                            <option>SUV Taxi</option>
                            <option>Limousine Taxi</option>
                        </select>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <div class="input-outer">
                            <input type="text" name="destination" placeholder="Start Destination" required>
                            <i class="icon fal fa-map-marker-alt"></i>
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <div class="input-outer">
                            <input type="text" name="destination" placeholder="End Destination" required>
                            <i class="icon fal fa-map-marker-alt"></i>
                        </div>
                    </div>

                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        <div class="boxed-outer-box">
                            <div class="boxed">
                                <input type="radio" id="android" name="skills" value="Single" checked>
                                <label for="android">Single</label>
                            </div>
                            <div class="boxed">
                                <input type="radio" id="ios" name="skills" value="Family">
                                <label for="ios">Family</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <input type="text" name="name" placeholder="Complete Name" required>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <input type="email" name="email" placeholder="Email Address" required>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        <div class="input-outer">
                            <input type="text" name="destination" placeholder="Phone No" required>
                            <i class="icon fal fa-mobile"></i>
                        </div>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        <button type="submit" class="theme-btn btn-style-one"><span class="btn-title">Find a Taxi</span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


<section class="app-section">
    <div class="auto-container">
        <div class="outer-box">
            <div class="bg bg-image" style="background-image: url(images/background/3.jpg);"></div>
            <div class="icon-car-3 bounce-x"></div>
            <div class="bg-overlay-2"></div>
            <div class="content">
                <h1 class="title letters-slide-up text-split">Elə indi <br> <span class="colored">«Alo Taksi»</span>ni <br> telefonunuza<br> yükləyin</h1>
                <div class="text">Sərfəli və rahat səfərdən zövq alın</div>
               @foreach (var setting in Model.Settings)
                {
                    <div class="btn-box">
                        <a href="@setting.PlayStore" class="image"><img src="~/images/icons/google-play.png" alt="Image"></a>
                        <a href="#" class="image"><img src="~/images/icons/app-store.png" alt="Image"></a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


<section class="funfact-section">
    <div class="auto-container">
        <div class="fact-counter">
            @foreach (var statistic in Model.Statistics)
            {
                <div class="row">

                    <div class="counter-block col-lg-4 col-md-6">
                        <div class="inner-box">
                            <div class="icon-box"><i class="icon flaticon-connected-car"></i></div>
                            <div class="counter-one"><span class="odometer" data-count="@statistic.CarCount"></span></div>
                            <h4 class="counter-text">Avtomobil</h4>
                        </div>
                    </div>

                    <div class="counter-block col-lg-4 col-md-6">
                        <div class="inner-box">
                            <div class="icon-box two"><i class="icon flaticon-destination"></i></div>
                            <div class="counter-one"><span class="odometer" data-count="@statistic.RoadCount"></span></div>
                            <h4 class="counter-text">Yolda Olan Sifariş</h4>
                        </div>
                    </div>

                    <div class="counter-block col-lg-4 col-md-6">
                        <div class="inner-box">
                            <div class="icon-box three"><i class="icon flaticon-location"></i></div>
                            <div class="counter-one"><span class="odometer" data-count="@statistic.LocationCount"></span></div>
                            <h4 class="counter-text">Müştəri</h4>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
